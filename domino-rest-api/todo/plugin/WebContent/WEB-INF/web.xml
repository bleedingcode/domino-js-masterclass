<?xml version="1.0" encoding="UTF-8"?>

<web-app>
	<display-name>todoApp Servlet</display-name>
	<servlet>
		<servlet-name>todoApp</servlet-name>
		<servlet-class>org.openntf.todo.ODADataServlet
		</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.openntf.todo.ToDoApplication
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>todoApp</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>